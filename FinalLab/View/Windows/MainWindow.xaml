<Window x:Class="FinalLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        ResizeMode="NoResize"
        Background="{DynamicResource Focusing}"
        WindowStartupLocation="CenterScreen"
        Height="220"
        Width="400">
    <WindowChrome.WindowChrome>
        <WindowChrome
            CaptionHeight="0"
            ResizeBorderThickness="5"
            GlassFrameThickness="0"
            CornerRadius="0" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0" Background="{StaticResource Focusing}"
                MouseLeftButtonDown="MoveWindow">
            <Grid>
                <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                    <ui:Button Style="{DynamicResource ButtonBar}" Click="RollUpButton_Click">
                        <ui:SymbolIcon Symbol="LineHorizontal120" />
                    </ui:Button>
                    <ui:Button Style="{DynamicResource ButtonBar}" Click="UnwrapButton_Click" Background="Transparent"
                               IsEnabled="False">
                        <ui:SymbolIcon Symbol="Maximize20" />
                    </ui:Button>
                    <ui:Button Style="{DynamicResource CloseButton}" Click="CloseButton_Click">
                        <ui:SymbolIcon Symbol="Dismiss48" />
                    </ui:Button>
                </StackPanel>
            </Grid>
        </Border>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="75" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="25" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Row="0"
                    TextAlignment="Center"
                    Text="ЕМИАС"
                    Foreground="#FFFFFF"
                    FontFamily="{StaticResource Inter}"
                    FontSize="20"
                    FontWeight="Bold" />
                <TextBlock
                    Grid.Row="1"
                    Margin="20, 0"
                    TextWrapping="Wrap"
                    TextAlignment="Center"
                    Text="Единая медицинская информационно-аналитическая система"
                    Foreground="#FFFFFF"
                    FontFamily="{StaticResource Inter}"
                    FontSize="16" />
            </Grid>
            <Frame
                Grid.Row="1"
                x:Name="PageFrame"
                Background="{DynamicResource PrimaryBackground}" />
        </Grid>
    </Grid>
</Window>